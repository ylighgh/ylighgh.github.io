#include <stdio.h>
void swap(int *x, int *y)
{
    int t = *x; //t=a[i]
    *x = *y;    //a[j]=a[j+1]
    *y = t;
}

int main()
{
    int a[] = {1, 3, 12, 7, 227, 23, 56, 32};
    int i, j, t;
    int len = sizeof(a) / sizeof(a[0]);
    for (i = len; i > 0; i--)
    {
        for (j = 0; j < i; j++)
        {
            if (a[j] < a[j + 1])
            {
                swap(&a[j], &a[j + 1]);
            }
        }
        printf("%d ", a[i]);
    }
    printf("\n");
    return 0;
}
